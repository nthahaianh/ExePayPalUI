<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_grey"
    tools:context=".CardsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.75" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/background6"
                    app:layout_constraintBottom_toBottomOf="@id/guideline1"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/ll1_cards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp15"
                    android:paddingTop="@dimen/dp30"
                    android:paddingRight="@dimen/dp22"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/ivBack_cards"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp5"
                        android:src="@drawable/ic_group_6" />

                    <TextView
                        style="@style/TextStyle18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp3"
                        android:text="Cuentas bancarias y tarjetas " />

                    <TextView
                        android:id="@+id/tv"
                        style="@style/TextStyle29"
                        android:layout_marginHorizontal="@dimen/dp3"
                        android:layout_marginBottom="@dimen/dp20"
                        android:text="Mantenemos tus datos financieros protegidos para que nadie vea la informaciÃ³n confidencial." />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxWidth="200dp"
                    android:src="@mipmap/group"
                    app:layout_constraintTop_toBottomOf="@id/ll1_cards" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/dp18">

                <TextView
                    style="@style/TextStyle30"
                    android:layout_marginVertical="@dimen/dp5"
                    android:text="Mis tarjetas" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dp8"
                    android:background="@drawable/background1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp15"
                        android:src="@drawable/ic_mastercard_2" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextStyle23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mastercard" />

                        <TextView
                            style="@style/TextStyle24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="****9889" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/background9"
                            android:gravity="center">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/background8"
                                android:gravity="center">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/background7"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/dp6"
                                        android:src="@drawable/ic_create_black_18_dp_2" />
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dp5"
                                    android:src="@drawable/ic_delete_outline_black_18_dp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dp8"
                                android:src="@drawable/ic_path" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dp8"
                    android:background="@drawable/background1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp15"
                        android:layout_marginVertical="@dimen/dp25"
                        android:src="@drawable/ic_combined_shape" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextStyle23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Visa black" />

                        <TextView
                            style="@style/TextStyle24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="****8764" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/dp3"
                        android:src="@drawable/ic_more_vert_black_18_dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dp8"
                    android:background="@drawable/background1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp15"
                        android:layout_marginVertical="@dimen/dp25"
                        android:src="@drawable/ic_combined_shape" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextStyle23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Visa black" />

                        <TextView
                            style="@style/TextStyle24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="****8764" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/dp3"
                        android:src="@drawable/ic_more_vert_black_18_dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/dp25"
        android:layout_marginVertical="@dimen/dp15"
        android:backgroundTint="@color/cerulean_blue"
        android:src="@drawable/ic_add_black_18_dp"
        android:tint="@color/white"
        app:borderWidth="@dimen/dp0" />
</RelativeLayout>